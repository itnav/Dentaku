<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#daa520"
    tools:context=".MyActivity">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:src="@drawable/background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/droidimageid2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/star"
        android:layout_marginTop="184dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/droidimageid1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/droidimageid2"
        android:layout_toLeftOf="@+id/droidimageid2"
        android:layout_toStartOf="@+id/droidimageid2" />

    <ImageView
        android:id="@+id/droidimageid3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/droidimageid2"
        android:layout_toRightOf="@+id/droidimageid2"
        android:layout_toEndOf="@+id/droidimageid2" />

    <Button
        android:id="@+id/slotbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:layout_alignLeft="@+id/droidimageid1"
        android:layout_alignRight="@+id/droidimageid1"
        android:layout_below="@+id/droidimageid1"/>

    <Button
        android:id="@+id/slotbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:layout_alignLeft="@id/droidimageid2"
        android:layout_alignRight="@id/droidimageid2"
        android:layout_below="@id/droidimageid2"/>
    <Button
        android:id="@+id/slotbutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:layout_alignLeft="@id/droidimageid3"
        android:layout_alignRight="@id/droidimageid3"
        android:layout_below="@id/droidimageid3"/>
    <Button
        android:id="@+id/retrybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="もう一回！"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/slotbutton2"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Slot  Machine"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:textSize="50dp"
        android:textColor="#0000ff"/>


</RelativeLayout>
